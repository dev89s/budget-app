<div id="<%= dom_id category %>" class="category-partial">
  <div class="category-container">
    <div class='category-identity'>
      <% if (current_page? categories_path) || (current_page? root_path) %>
        <img src=<%= category.icon %> height='60px'>
        <span class='category-name'>
          <%= category.name %>
        </span>
      <% else %>
        <span class='category-name'>
          <%= category.name %> Total:
        </span>
      <% end %>
    </div>
    <span class='total'>
      <% @purchases = Purchase.joins(:categories).where(categories: category).order(created_at: :desc) %>
      <% if !current_page? category_url(category) %>Total:<% end %> $<%= @purchases.sum(:amount)%>
    </span>
  </div>

  <% if current_page? category_path(category) %>
    <div class="purchase-list">
      <% @purchases.each do |purchase| %>
        <div class='purchase-items'>
          <%= purchase.name %>:
          $<%= purchase.amount %>
          <%= button_to purchase_path(purchase), {method: :delete, params: { category: category }, class: "delete-btn"} do %>
            <svg class='delete-btn-svg' width="40px" height="40px" viewBox="0 0 32 32" enable-background="new 0 0 32 32"
              id="Editable-line" version="1.1" xml:space="preserve" xmlns="http://www.w3.org/2000/svg"
              xmlns:xlink="http://www.w3.org/1999/xlink">
              <path d="M25,10H7v17c0,1.105,0.895,2,2,2h14c1.105,0,2-0.895,2-2V10z" fill="none" id="XMLID_129_" stroke="#fff" stroke-linecap="round" stroke-linejoin="round" stroke-miterlimit="10" stroke-width="2"/>
              <path d="M20,7h-8V5c0-1.105,0.895-2,2-2h4c1.105,0,2,0.895,2,2V7z" fill="none" id="XMLID_145_" stroke="#fff" stroke-linecap="round" stroke-linejoin="round" stroke-miterlimit="10" stroke-width="2"/>
              <path d="M28,10H4V8c0-0.552,0.448-1,1-1h22c0.552,0,1,0.448,1,1V10z" fill="none" id="XMLID_146_" stroke="#fff" stroke-linecap="round" stroke-linejoin="round" stroke-miterlimit="10" stroke-width="2"/>
              <line fill="none" id="XMLID_148_" stroke="#fff" stroke-linecap="round" stroke-linejoin="round" stroke-miterlimit="10" stroke-width="2" x1="16" x2="16" y1="15" y2="24"/>
              <line fill="none" id="XMLID_147_" stroke="#fff" stroke-linecap="round" stroke-linejoin="round" stroke-miterlimit="10" stroke-width="2" x1="12" x2="12" y1="15" y2="24"/>
              <line fill="none" id="XMLID_149_" stroke="#fff" stroke-linecap="round" stroke-linejoin="round" stroke-miterlimit="10" stroke-width="2" x1="20" x2="20" y1="15" y2="24"/>
            </svg>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>

</div>
