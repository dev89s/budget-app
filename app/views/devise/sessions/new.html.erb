
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'login-form'}) do |f| %>
  <div class="field login-inputs">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email Address', class: "login-input" %>
    <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class: "login-input" %>
  </div>
  <div class="login-remember-forget">
    <% if devise_mapping.rememberable? %>
      <div class="remember-me">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class:"forget-link" %><br />
  </div>
  <%= f.submit "Log in", class: "login-submit" %>
<% end %>
