<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "signup-form"}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="signup-inputs">
    <%= f.text_field :firstName, autofocus: true, autocomplete: "firstName", placeholder: "First Name", class: "signup-input" %>
    <%= f.text_field :lastName, autofocus: true, autocomplete: "lastName", placeholder: "Last Name", class: "signup-input" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email Address", class: "signup-input" %>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "signup-input" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "signup-input" %>
  </div>
  <div class="min-char-and-links">
  <% if @minimum_password_length %>
    <em class="min-char">(<%= @minimum_password_length %> characters minimum)</em>
  <% end %><br />
  <span class="signup-login-disc">If you have an acount?</span>
  <%= link_to "Log in", new_session_path(resource_name), class: "signup-login-link" %><br />
  </div>
  <%= f.submit "Sign up", class: "signup-submit" %>
  <br>
<% end %>
