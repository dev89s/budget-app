<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "pass-reset-form" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "New Password", class: "reset-password-input"  %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm new password", class: "reset-password-input" %>
  </div>
  <div class="min-char-and-links">
    <% if @minimum_password_length%>
      <em class="min-char">(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit "Change my password", class: "pass-reset-submit" %>
  </div>
  <br>
<% end %>

