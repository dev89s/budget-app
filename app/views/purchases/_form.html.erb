<%= form_with(model: purchase) do |form| %>
  <% if purchase.errors.any? %>
    <div style="color: red">
      <h4><%= pluralize(purchase.errors.count, "error") %> prohibited this purchase from being saved:</h4>

      <ul>
        <% purchase.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, autofocus: true %>
  </div>

  <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.number_field :amount, step: 0.01 %>
  </div>

  <div>
    <h4 style="margin-bottom: 5px; margin-top: 20px"> Categories: </h4>
    <div style="margin-bottom: 10px">
      <%= form.collection_check_boxes :category_ids, @categories, :id, :name %>
    </div>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
